{
  "name": "x-nodejs-mts",
  "version": "0.1.0",
  "description": "x-template for ts/nodejs project",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:debug": "NODE_OPTIONS=\"--inspect-brk\" ts-node src/index.ts",
    "prebuild": "rimraf dist # rm -rf dist",
    "build": "tsc",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.11.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "private": true
}
